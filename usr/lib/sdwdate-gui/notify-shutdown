#!/bin/bash

## Copyright (C) 2018 - 2020 ENCRYPTED SUPPORT LP <adrelanos@riseup.net>
## See the file COPYING for copying conditions

set -x

shopt -s nullglob
for i in \
   /etc/sdwdate-gui.d/*.conf \
   /usr/local/etc/sdwdate-gui.d/*.conf \
   ; do
      bash -n "$i"
      source "$i"
done

if ! test -f /usr/share/qubes/marker-vm ; then
   true "$0: INFO: Not implemented for Non-Qubes. Exiting. Ok."
   exit 0
fi

if [ "$disable" = "true" ]; then
   exit 0
fi

## If gateway is not configured in config file, use default.
if [ "$gateway" = "" ]; then
   gateway=sys-whonix
fi

NAME="$(qubesdb-read /name)"

if [ "$NAME" = "$gateway" ]; then
   true "$0: NAME '$NAME' = gateway '$gateway'. No need to notify self. Exiting. Ok."
   exit 0
fi

if [ "$NAME" = "" ]; then
   exit 0
fi

/usr/bin/qrexec-client-vm "$gateway" "whonix.NewStatus+$NAME shutdown"

true
